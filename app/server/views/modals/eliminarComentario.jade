div.modal.fade#modal-eliminar-comentario(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
    div.modal-dialog
        div.modal-content
            div.modal-header
                button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
                h4.modal-title ¿Está seguro?
            div.modal-body
                form
                    div.alert.alert-info Si acepta, el comentario será eliminado de forma definitiva.
            div.modal-footer
                button(type="button", data-dismiss="modal", ng-click="eliminarUsuarioDefinitivamente()").btn.btn-primary#confirmarEliminacion Aceptar