extends layout

block content
    div#container
        header
            nav.navbar.navbar-fixed-top.fondoTurquesa(role="navigation")
                div.navbar-inner
                    div.container-fluid
                        div.navbar-header
                            button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
                                span.sr-only Cambiar la navegación
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a(href="#").navbar-brand.white.middle Inicio
                        div.collapse.navbar-collapse
                            ul.nav.navbar-nav
                                li.active
                                    a(href="#").middle Gama propia
                                li
                                    a(href="#").middle Publicitarios
                                li
                                    a(href="#").middle Contacto
                                //li
                                    div.input-group.navbar-input-group.fbSearch
                                        form#search-form.navbar-form.navbar-left.hidden-xs.hidden-sm(role="search", method="get", action="#")
                                            div.form-group
                                                input.form-control.border-search.border-rect-red#srchterm(type="text", placeholder="Buscar...", name="srchterm")
                                                span.input-group-btn-red.navbar-input-group-btn
                                                    button.btn.btn-default(type="submit")
                                                        i.fa.fa-search
                                            div.suggest
                                                ul
                                                    li.header
                                                        span.text Recipes
                                                    li
                                                        a(href="#")
                                                            span.fa.fa-search
                                                            span.text Search recipes
                                                            span.category
                                                    li.header
                                                        span.text People
                                                    li
                                                        a(href="#")
                                                            span.fa.fa-search
                                                            span.text Search people
                                                            span.category

                            ul.nav.navbar-nav.navbar-right.hidden-xs.hidden-sm
                                a.btn.btn-default.btn-eathub-red(href="#", role="button")#entrar Entrar
        main
            div.container
                div.row
                    div.col-md-12.hidden-md.hidden-lg
                        div.panel.panel-default.panel-body.text-center
                            br
                            div.col-md-12.col-xs-12.hidden-md.hidden-lg
                                a.btn.btn-default.btn-eathub(href="#", role="button") Entrar
                    div.col-sm-6.col-md-4
                        div.panel.panel-body.main-card
                            div.main-card-picture
                                a(href="#")
                                    img(src="/img/surtido.jpg", style="width: 100%; height: 100%;")
                            div.main-card-content(style="word-wrap: break-word;")
                                div.main-card-name
                                    a.recipe-title(href="#")
                                        span.caramelo Toffees y masticables
                                div.main-card-description
                                    | Descripción de toffees y masticables
                            div.recipe-time
                                span
                                    i.fa.fa-bars
                                span  M&aacute;s info
                    div.col-sm-6.col-md-4
                        div.panel.panel-body.main-card
                            div.main-card-picture
                                a(href="#")
                                    img(src="/img/cola.jpg", style="width: 100%; height: 100%;")
                            div.main-card-content(style="word-wrap: break-word;")
                                div.main-card-name
                                    a.recipe-title(href="#")
                                        span.caramelo Grageados
                                div.main-card-description
                                    | Descripción de grageados...
                            div.recipe-time
                                span
                                    i.fa.fa-bars
                                span  M&aacute;s info
                    div.col-sm-6.col-md-4
                        div.panel.panel-body.main-card
                            div.main-card-picture
                                a(href="#")
                                    img(src="/img/pina.jpg", style="width: 100%; height: 100%;")
                            div.main-card-content(style="word-wrap: break-word;")
                                div.main-card-name
                                    a.recipe-title(href="#")
                                        span.caramelo Con palo
                                div.main-card-description
                                    | Descripcion de con palo...
                            div.recipe-time
                                span
                                    i.fa.fa-bars
                                span  M&aacute;s info

        div#lightboxOverlay.lightboxOverlay(style="display: none;")
        div#lightbox.lightbox(style="display: none;")
            div.lb-outerContainer
                div.lb-container
                    img.lb-image(src="")
                    div.lb-nav
                        a.lb-prev(href="")
                        a.lb-next(href="")
                    div.lb-loader
                        a.lb-cancel
            div.lb-dataContainer
                div.lb-data
                    div.lb-details
                        span.lb-caption
                        span.lb-number
                    div.lb-closeContainer
                        a.lb-close
