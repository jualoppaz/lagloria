extends layout

block head
    title Login
    link(rel="stylesheet", href="/css/backgroundImage.css")

block content
    div#container.fondoCaramelos

        div(ng-app="login")
            div(ng-controller="mainController")
                include partials/navbar

                main
                    div.container
                        div.row
                            div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
                                img(src="/img/logoblanco.png", style="width:100%; height: 100%")
                            div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-12(style="clear:both")
                                div.panel.panel-body.main-card(style="height: auto")
                                    div.main-card-content(style="word-wrap: break-word;")
                                        div.main-card-name
                                            p.recipe-title(style="text-align:center; padding-left: 0px")
                                                span Acceder

                                        div.col-md-12.col-sm-12
                                            div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                input(type="text", placeholder="Usuario", ng-model="form.user").form-control
                                        div.col-md-12.col-sm-12(ng-show="usuarioInexistente == true", style="margin-top: 15px")
                                            div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                div.alert.alert-danger(ng-bind-template="{{errores.usuarioInexistente}}")
                                        div.col-md-12.col-sm-12(style="margin-top:15px")
                                            div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                input(type="password", placeholder="Contraseña", ng-model="form.pass").form-control
                                        div.col-md-12.col-sm-12(ng-show="passErroneo == true", style="margin-top: 15px")
                                            div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                div.alert.alert-danger(ng-bind-template="{{errores.passErroneo}}")
                                        div.col-md-12.col-sm-12(style="margin-top:15px")
                                            div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1.textoTurquesa
                                                div.col-md-1.col-sm-1.col-xs-1(style="padding-left:0px")#remember-me
                                                    input(type="checkbox")
                                                div.col-md-7.col-sm-7.col-xs-7(style="padding-left:0px; padding-right: 0px")
                                                    label Recuérdame
                                                div.col-md-3.col-sm-3.col-xs-3(style="padding-left:0px; padding-right: 0px")
                                                a(href="/signup").textoTurquesa Registrarse
                                        div.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3(style="text-align:center; margin-top:15px")
                                            a.btn.btn-default.btn-lagloria(href="#", role="button", ng-click="loguearse()")#buscar Enviar
                                        div.col-md-12




block scripts
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/angular.js')
    script(src='/js/angular/login.js')

