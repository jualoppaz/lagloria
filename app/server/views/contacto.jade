extends layout

block head
    title Caramelos La Gloria
    link(rel="stylesheet", href="/css/backgroundImage.css")

block content
    div#container.fondoCaramelos(ng-app="contacto")
        div(ng-controller="navbarController")
            div(ng-controller="mainController")
                include partials/navbar

                main(style="margin-top:50px")
                    div.container
                        div.row
                            div.col-md-8.col-md-offset-2
                                div.panel.panel-body
                                    div.main-card-content
                                        div.main-card-name
                                            p.recipe-title(style="text-align:center; padding-left: 0px")
                                                span Contactar


                                        form(novalidate, ng-submit="enviarCorreo()")
                                            div.col-md-12.col-sm-12
                                                div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                    input(type="text", name="nombre", placeholder="Nombre", ng-model="form.nombre").form-control
                                            div.col-md-12.col-sm-12(ng-show="nombreVacio", style="margin-top: 15px")
                                                div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                    div.alert.alert-danger(ng-bind-template="{{errores.nombreVacio}}")
                                            div.col-md-12.col-sm-12(style="margin-top:15px")
                                                div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                    input(type="email", placeholder="Introduzca un email de contacto", ng-non-bindable)#email.form-control
                                            div.col-md-12.col-sm-12(ng-show="emailVacio", style="margin-top: 15px")
                                                div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                    div.alert.alert-danger(ng-bind-template="{{errores.emailVacio}}")
                                            div.col-md-12.col-sm-12(ng-show="emailInvalido && !emailVacio", style="margin-top: 15px")
                                                div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                    div.alert.alert-danger(ng-bind-template="{{errores.emailInvalido}}")
                                            div.col-md-12.col-sm-12(style="margin-top:15px")
                                                div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                    textarea(placeholder="Introduzca su mensaje", ng-model="form.mensaje").form-control
                                            div.col-md-12.col-sm-12(ng-show="mensajeVacio", style="margin-top: 15px")
                                                div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                                    div.alert.alert-danger(ng-bind-template="{{errores.mensajeVacio}}")


                                            div.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3(style="text-align:center; margin-top:15px")
                                                button.btn.btn-default.btn-lagloria(href="#", role="button", type="submit")#buscar Enviar


block scripts
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/angular.js')
    script(src='/js/angular/contacto.js')
    script(src='/js/angular/navbar.js')

