extends layout

block head
    title Registro
    link(rel="stylesheet", href="/css/backgroundImage.css")

block content
    div#container.fondoCaramelos

        include partials/navbar

        main
            div.container(ng-app="registro")
                div.row(ng-controller="mainController")
                    div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
                        img(src="/img/logoblanco.png", style="width:100%; height: 100%")
                    div.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-12(style="clear:both")
                        div.panel.panel-body.main-card(style="height: auto")
                            div.main-card-content(style="word-wrap: break-word;")
                                div.main-card-name
                                    p.recipe-title(style="text-align:center; padding-left: 0px")
                                        span Registrarse
                                div.col-md-12.col-sm-12
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                        input(type="text", ng-model="form.user", placeholder="Introduzca su usuario").form-control
                                div.col-md-12(ng-show="usuarioInvalido == true", style="margin-top: 15px")
                                    div.col-md-10.col-md-offset-1
                                        div.alert.alert-danger(ng-bind-template="{{errores.usuarioInvalido}}")
                                div.col-md-12.col-sm-12(style="margin-top:15px")
                                    div.col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                                        input(type="password", ng-model="form.pass", placeholder="Introduzca su contrase√±a").form-control
                                div.col-md-12(ng-show="passInvalido == true", style="margin-top: 15px")
                                    div.col-md-9.col-md-offset-3
                                        div.alert.alert-danger(ng-bind-template="{{errores.passInvalido}}")
                                div.col-md-11.col-md-offset-1(ng-show="registroConExito == true", style="margin-top: 15px; padding-right:30px")
                                    //div.col-md-9.col-md-offset-3
                                    div.alert.alert-success(ng-bind-template="{{registroOk}}")
                                div.col-md-11.col-md-offset-1(ng-show="usuarioEnUso == true", style="margin-top: 15px; padding-right:30px")
                                    //div.col-md-9.col-md-offset-3
                                    div.alert.alert-danger(ng-bind-template="{{usuarioOcupado}}")
                                div.col-md-6.col-md-offset-3(style="text-align:center; margin-top:15px")
                                    a.btn.btn-default.btn-lagloria(href="#", role="button", ng-click="registrarse()")#buscar Enviar



block scripts
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/angular.js')
    script(src='/js/angular/registro.js')

