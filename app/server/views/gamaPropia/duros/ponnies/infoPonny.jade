extends ../../../layout
block head
    title Información
    link(rel="stylesheet", href="/css/backgroundImage.css")
block content
    div#container

        div(ng-app="ponnyInfo")
            div(ng-controller="mainController")

                include ../../../navbar

                main.margen-superior-50
                    div.container
                        div.row
                            include ../../../botonesMovil

                            div.col-md-12.col-xs-12
                                div.panel.panel-body
                                    div.main-card-content
                                        div.main-card-description
                                            div.main-card-name
                                                a(href="/gamaPropia")
                                                    span.caramelo Gama propia
                                                b.abel.mayorQue >
                                                a(href="../../duros")
                                                    span.caramelo Duros
                                                b.abel.mayorQue >
                                                a(href="../ponny")
                                                    span.caramelo Ponny
                            div
                                div
                                    div.col-md-12.col-xs-12
                                        div.panel.panel-body
                                            div.main-card-content(style="word-wrap: break-word;")
                                                div.main-card-name
                                                    a.recipe-title(href="#")
                                                        span.caramelo(ng-bind-template="{{ponny.model}}")
                                    div(ng-show="esSurtido(ponny)")
                                        // Vista para ordenadores
                                        div.col-md-12.hidden-sm.hidden-xs
                                            div.panel.panel-body.panel-ponny-info
                                                div.col-md-4
                                                    div(style="float:left; margin-right: 20px; width: 70%; height: 400px")
                                                        img(ng-src="/img/imagenesMias/{{ponny.image}}", height="100%", width="100%", style="margin-left: 10px; margin-bottom: 10px")
                                                div.col-md-8
                                                    h1(style="text-align: left;").separador-horizontal.green Detalles
                                                    div.row.blue
                                                        div.col-md-4
                                                            h3 Categoría
                                                        div.col-md-4
                                                            h3 Tipo
                                                        div.col-md-4
                                                            h3 Modelo
                                                    div.row
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{ponny.category}}")
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{ponny.type}}")
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{ponny.model}}")
                                                    div.row.blue
                                                        div.col-md-4
                                                            h3 Pedido mínimo
                                                        div.col-md-4
                                                            h3 Precio
                                                    div.row
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{ponny.minimumOrder}} Kg")
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{ponny.price}} € / Kg")
                                            div.panel.panel-body
