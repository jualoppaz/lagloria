// Surtido: ordenadores y moviles
// Otros:   ordenadores y moviles

extends ../../../layout
block head
    title Información
    link(rel="stylesheet", href="/css/backgroundImage.css")
block content
    div#container(ng-app="lagloria")
        div(ng-controller="LoguedUserController")

            include ../../../partials/navbar

            div(ng-controller="InfoMasticableController")
                main.margen-superior-50
                    div.container
                        div.row
                            include ../../../partials/botonesMovil

                            div.col-md-12.col-sm-12.col-xs-12
                                div.panel.panel-body
                                    div.main-card-content
                                        div.main-card-description
                                            div.main-card-name
                                                a(href="/gamaPropia")
                                                    span.caramelo.lagloria Gama propia
                                                b.abel.mayorQue >
                                                a(href="../../toffeesYMasticables")
                                                    span.caramelo.lagloria Toffees y Masticables
                                                b.abel.mayorQue >
                                                a(href="../masticables")
                                                    span.caramelo.lagloria Masticables
                            div
                                div
                                    div.col-md-12.col-sm-12.col-xs-12
                                        div.panel.panel-body
                                            div.main-card-content(style="word-wrap: break-word;")
                                                div.main-card-name
                                                    a.recipe-title(href="#")
                                                        span.caramelo.lagloria(ng-bind-template="{{producto.model}}")

                                    div.col-md-12.col-sm-12.col-xs-12
                                        div.panel.panel-body.panel-masticable-info
                                            div.col-md-3.col-sm-12
                                                //div(style="float:left; width: 100%; height: 260px", ng-show="imagenesOriginales").hidden-sm.hidden-xs.text-center
                                                    img(ng-src="/img/imagenesMias/{{producto.image}}", height="100%", width="100%", style="margin-left: 10px; margin-bottom: 10px")
                                                //div(style="float:left; margin-right: 20px; height: 260px", ng-show="imagenesOriginales").hidden-md.hidden-lg.text-center.col-sm-4.col-sm-offset-4.col-xs-4.col-xs-offset-4
                                                    img(ng-src="/img/imagenesMias/{{producto.image}}", height="100%", width="100%", style="margin-left: 10px; margin-bottom: 10px")


                                                //div(style="float:left; width: 100%;", ng-show="imagenesOriginales == false").hidden-sm.hidden-xs.text-center
                                                    img(ng-src="/img/redimensionadas/{{producto.resizedImage}}", height="100%", width="100%", style="margin-left: 10px; margin-bottom: 10px")
                                                //div(style="float:left; margin-right: 20px; height: 260px", ng-show="imagenesOriginales == false").hidden-md.hidden-lg.text-center.col-sm-4.col-sm-offset-4.col-xs-4.col-xs-offset-4
                                                    img(ng-src="/img/redimensionadas/{{producto.resizedImage}}", height="100%", width="100%", style="margin-left: 10px; margin-bottom: 10px")

                                                include ../../../partials/carouselCaramelos


                                            // OJO. EN EL SIGUIENTE DIV ES NECESARIO INDICAR LOS 3 TAMAÑOS
                                            // DE LO CONTRARIO, LAS FLECHAS DEL CAROUSEL NO FUNCIONAN EN EL DISPOSITIVO ASOCIADO

                                            div.col-md-8.col-md-offset-1.col-sm-12.col-xs-12
                                                h1(style="text-align: left;").separador-horizontal.green Detalles
                                                div.row
                                                    div.col-md-4.col-sm-6.col-xs-6
                                                        h3.blue Categoría
                                                        h3(ng-bind-template="{{producto.category}}")
                                                    div.col-md-4.col-sm-6.col-xs-6
                                                        h3.blue Tipo
                                                        h3(ng-bind-template="{{producto.type}}")
                                                    div.col-md-4.col-sm-6.col-xs-6
                                                        h3.blue Modelo
                                                        h3(ng-bind-template="{{producto.model}}")
                                                    div.col-md-4.col-sm-6.col-xs-6
                                                        h3.blue Pedido mínimo
                                                        h3(ng-bind-template="{{producto.minimumOrder}} Kg")
                                                    div.col-md-4.col-sm-6.col-xs-6
                                                        h3.blue Precio
                                                        h3(ng-bind-template="{{producto.price}} € / Kg")

                                            include ../../../partials/botonComprar

                                        div.panel.panel-body
                                            div.masticable-info-description.blue
                                                h3(style="text-align: justify; margin-top: 0px", ng-bind-template="{{producto.description}}")



                                        include ../../../partials/comentarios










block scripts
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/angular.js')
    script(src='/js/angular/services.js')
    script(src='/js/angular/loguedUser.js')
    script(src='/js/angular/toffeesYMasticables/masticables/info.js')
    script(src='/js/angular/navbar.js')
    script(src='/js/angular/comprar.js')
    script(src='/js/angular/comentarios.js')