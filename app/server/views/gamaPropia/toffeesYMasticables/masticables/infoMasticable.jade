// Surtido: ordenadores y moviles
// Otros:   ordenadores y moviles

extends ../../../layout
block head
    title Información
    link(rel="stylesheet", href="/css/backgroundImage.css")
block content
    div#container(ng-app="masticableInfo")

        div(ng-controller="loginNavbarController")
            div(ng-controller="mainController")

                include ../../../partials/navbar

                main.margen-superior-50
                    div.container
                        div.row
                            include ../../../partials/botonesMovil

                            div.col-md-12
                                div.panel.panel-body
                                    div.main-card-content
                                        div.main-card-description
                                            div.main-card-name
                                                a(href="/gamaPropia")
                                                    span.caramelo Gama propia
                                                b.abel.mayorQue >
                                                a(href="../../toffeesYMasticables")
                                                    span.caramelo Toffees y Masticables
                                                b.abel.mayorQue >
                                                a(href="../masticables")
                                                    span.caramelo Masticables
                            div
                                div
                                    div.col-md-12
                                        div.panel.panel-body
                                            div.main-card-content(style="word-wrap: break-word;")
                                                div.main-card-name
                                                    a.recipe-title(href="#")
                                                        span.caramelo(ng-bind-template="{{producto.model}}")
                                    div(ng-show="esSurtido(producto)")
                                        // Vista para ordenadores
                                        div.col-md-12.hidden-sm.hidden-xs
                                            div.panel.panel-body.panel-masticable-info
                                                div.col-md-2.col-sm-2
                                                    div(style="float:left; margin-right: 20px; width: 100%; height: 260px").text-center
                                                        img(ng-src="/img/imagenesMias/{{producto.image}}", height="100%", width="100%", style="margin-left: 10px; margin-bottom: 10px")
                                                div.col-md-9.col-md-offset-1
                                                    h1(style="text-align: left;").separador-horizontal.green Detalles
                                                    div.row.blue
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3 Categoría
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3 Tipo
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3 Modelo
                                                    div.row
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.category}}")
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.type}}")
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.model}}")
                                                    div.row.blue
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3 Pedido mínimo
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3 Precio
                                                    div.row
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.minimumOrder}} Kg")
                                                        div.col-md-4.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.price}} € / Kg")

                                                include ../../../partials/botonComprar

                                            div.panel.panel-body
                                                div.masticable-info-description.blue
                                                    h3(style="text-align: justify; margin-top: 0px", ng-bind-template="{{producto.description}}")

                                        // Vista para tablets y moviles
                                        div.col-sm-12.hidden-lg.hidden-md
                                            div.panel.panel-body.panel-masticable-info
                                                div.col-sm-4.col-sm-offset-4.col-xs-4.col-xs-offset-4
                                                    div(style="float:left; margin-right: 20px; width: 100%; height: 260px").text-center
                                                        img(ng-src="/img/imagenesMias/{{producto.image}}", height="100%", width="100%", style="margin-left: 10px; margin-bottom: 10px")
                                                div.col-sm-12.col-xs-12
                                                    h1(style="text-align: left;").separador-horizontal.green Detalles
                                                    div.row.blue
                                                        div.col-sm-4.col-xs-4
                                                            h3 Categoría
                                                        div.col-sm-4.col-xs-4
                                                            h3 Tipo
                                                        div.col-sm-4.col-xs-4
                                                            h3 Modelo
                                                    div.row
                                                        div.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.category}}")
                                                        div.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.type}}")
                                                        div.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.model}}")
                                                    div.row.blue
                                                        div.col-sm-4.col-xs-4
                                                            h3 Pedido mínimo
                                                        div.col-sm-4.col-xs-4
                                                            h3 Precio
                                                    div.row
                                                        div.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.minimumOrder}} Kg")
                                                        div.col-sm-4.col-xs-4
                                                            h3(ng-bind-template="{{producto.price}} € / Kg")

                                                include ../../../partials/botonComprar

                                            div.panel.panel-body
                                                div.masticable-info-description.blue
                                                    h3(style="text-align: justify; margin-top: 0px", ng-bind-template="{{producto.description}}")

                                    div(ng-show="!esSurtido(producto)")
                                        // Vista para ordenadores
                                        div.col-md-12.col-sm-12.col-xs-12
                                            div.panel.panel-body.panel-masticable-info
                                                div.col-md-5.text-center
                                                    div(style="float:left; margin-right: 20px; width: 100%; height: 400px")
                                                        img(ng-src="/img/imagenesMias/{{producto.image}}", height="30%", width="70%", style="margin-left: 10px; margin-bottom: 10px; margin-top:60px")
                                                div.col-md-7
                                                    h1(style="text-align: left;").separador-horizontal.green Detalles
                                                    div.row.blue
                                                        div.col-md-4
                                                            h3 Categoría
                                                        div.col-md-4
                                                            h3 Tipo
                                                        div.col-md-4
                                                            h3 Modelo
                                                    div.row
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{producto.category}}")
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{producto.type}}")
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{producto.model}}")
                                                    div.row.blue
                                                        div.col-md-4
                                                            h3 Pedido mínimo
                                                        div.col-md-4
                                                            h3 Precio
                                                    div.row
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{producto.minimumOrder}} Kg")
                                                        div.col-md-4
                                                            h3(ng-bind-template="{{producto.price}} € / Kg")
                                            div.panel.panel-body
                                                div.masticable-info-description.blue
                                                    h3(style="text-align: justify; margin-top: 0px", ng-bind-template="{{producto.description}}")

                                        // Vista para moviles
                                        //div.col-sm-12.hidden-md.hidden-lg
                                            div.panel.panel-body.panel-masticable-info
                                                div.col-sm-12
                                                    div(style="float:left; margin-right: 20px; margin-bottom: 30px; width: 100%; height: 150px").text-center
                                                        img(ng-src="/img/imagenesMias/{{producto.image}}", height="100%", width="70%", style="margin-left: 10px; margin-bottom: 30px")
                                                div.col-sm-12
                                                    h1(style="text-align: left;").separador-horizontal.green Detalles
                                                    div.row.blue
                                                        div.col-sm-4
                                                            h3 Categoría
                                                        div.col-sm-4
                                                            h3 Tipo
                                                        div.col-sm-4
                                                            h3 Modelo
                                                    div.row
                                                        div.col-sm-4
                                                            h3(ng-bind-template="{{masticable.category}}")
                                                        div.col-sm-4
                                                            h3(ng-bind-template="{{masticable.type}}")
                                                        div.col-sm-4
                                                            h3(ng-bind-template="{{masticable.model}}")
                                                    div.row.blue
                                                        div.col-sm-4
                                                            h3 Pedido mínimo
                                                        div.col-sm-4
                                                            h3 Precio
                                                    div.row
                                                        div.col-sm-4
                                                            h3(ng-bind-template="{{masticable.minimumOrder}} Kg")
                                                        div.col-sm-4
                                                            h3(ng-bind-template="{{masticable.price}} € / Kg")
                                            div.panel.panel-body
                                                div.masticable-info-description.blue
                                                    h3(style="text-align: justify; margin-top: 0px", ng-bind-template="{{masticable.description}}")


block scripts
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/angular.js')
    script(src='/js/angular/toffeesYMasticables/masticables/info.js')
    script(src='/js/angular/loginNavbar.js')
    script(src='/js/angular/comprar.js')