extends layout

block head
    title Caramelos La Gloria
    link(rel="stylesheet", href="/css/backgroundImage.css")

block content
    div#container.fondoCaramelos(ng-app="lagloria")

        div(ng-controller="LoguedUserController")
            div(ng-controller="IndexController")

                include partials/navbar

                div

                    main
                        div.container
                            div.row
                                div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
                                    img(src="/img/logoblanco.png", style="width:100%; height: 100%")
                                div.col-md-4.col-md-offset-1.col-sm-6.col-xs-12(style="clear:both")
                                    div.panel.panel-body.main-card#gamaPropia
                                        div.main-card-content(style="word-wrap: break-word;")
                                            div.main-card-name
                                                a.recipe-title(href="/gamaPropia")
                                                    span.caramelo.lagloria Gama propia
                                            div.main-card-description
                                                p.
                                                   Caramelos ofrecidos por La Gloria, con multitud de sabores a elegir.


                                div.col-md-4.col-md-offset-2.col-sm-6.col-xs-12
                                    div.panel.panel-body.main-card#publicitarios
                                        div.main-card-content(style="word-wrap: break-word;")
                                            div.main-card-name
                                                a.recipe-title(href="#")
                                                    span.caramelo.eathub Publicitarios
                                            div.main-card-description
                                                p.
                                                   Caramelos personalizados con el logo de su empresa.

                                div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-12
                                    div.panel.panel-body(style="margin-top:100px")
                                        div(ng-bind-template="Última actualización: {{fecha | date:('dd/MM/yyyy')}}")

block scripts
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/angular.js')
    script(src='/js/angular/services.js')
    script(src='/js/angular/loguedUser.js')
    script(src='/js/angular/index.js')
    script(src='/js/angular/navbar.js')

