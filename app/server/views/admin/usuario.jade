extends ../adminPartials/layout

block content
    div(ng-app="dashboard")
        div
            include ../adminPartials/navbar

        div.container-fluid
            div.row

                include ../adminPartials/sidebar

                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(ng-controller="UsuarioController")

                    h1.page-header Usuario

                    form.form-horizontal
                        div.form-group
                            label.col-sm-2.control-label Usuario:
                            div.col-sm-4
                                input(ng-model="nuevoUsuario.user").form-control
                        div(style="padding-left: 0px").form-group
                            label.col-sm-2.control-label Contraseña:
                            div.col-sm-4
                                input(ng-model="nuevoUsuario.pass").form-control
                        div.form-group
                            label.col-sm-2.control-label Rol:
                            div.col-sm-4
                                select.form-control
                                    option Proveedor
                                    option Administrador
                        div.form-group
                            label.col-sm-2.control-label Activo:
                            div.col-sm-4
                                select.form-control
                                    option Sí
                                    option No
                        div.form-group
                            label.col-sm-2.control-label Baneado:
                            div.col-sm-4
                                select.form-control
                                    option Sí
                                    option No
                        div.form-group
                            label.col-sm-2.control-label Fecha de registro:
                            div.col-sm-4
                                input(value="{{nuevoUsuario.date | date:'dd/MM/yyyy'}}").form-control

                        div.col-sm-2.col-sm-offset-2
                            a.btn.btn-default(href="#", role="button", ng-click="") Cancelar
                        div.col-sm-2
                            a.btn.btn-default.btn-primary(href="#", role="button", ng-click="")#confirmarEliminacion Aceptar


block scripts
    script(src="/js/jquery.js")
    script(src="/js/bootstrap.js")
    script(src="/js/angular.js")
    script(src='/js/angular/admin/app.js')
    script(src="/js/angular/admin/usuario.js")
    script(src="/js/angular/admin/navbar.js")
    script(src="/js/angular/admin/sidebar.js")