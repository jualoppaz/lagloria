extends ../adminPartials/layout

block content
    div(ng-app="dashboard")
        div
            include ../adminPartials/navbar

        div.container-fluid
            div.row

                include ../adminPartials/sidebar

                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(ng-controller="PedidoController")

                    h1.page-header Pedido

                    div.col-md-12.col-sm-12(style="padding-left: 0px")
                        div.col-md-12(style="padding-left: 0px")
                            div.col-md-1(style="padding-left: 0px")
                                label Cliente:
                            div.col-md-11(ng-bind-template="{{pedido.user}}")
                        div.col-md-12(style="padding-left: 0px")
                            div.col-md-1(style="padding-left: 0px")
                                label Fecha:
                            div.col-md-11(ng-bind-template="{{pedido.fecha | date:('dd/MM/yyyy')}}")

                        div.col-md-12.col-sm-12
                            table.table
                                thead
                                    tr
                                        th Categoría
                                        th Tipo
                                        th Modelo
                                        th Precio / Kg
                                        th Cantidad
                                        th Precio por producto
                                tbody(ng-repeat="producto in pedido.productos")
                                    tr
                                        td
                                            input(value="{{producto.category}}").form-control
                                        td
                                            input(value="{{producto.type}}").form-control
                                        td
                                            input(value="{{producto.model}}").form-control
                                        td
                                            input(value="{{producto.price}} €").form-control
                                        td
                                            div
                                                input(style="font-weight: normal", ng-model="producto.quantity", ng-init="producto.quantity = producto.quantity || producto.minimumOrder", min="{{producto.minimumOrder}}", ng-change="actualizarPrecios(producto)", ng-bind-template="{{producto.quantity}} uds.").form-control
                                                //a(href="#", style="margin-left:15px", ng-click="aumentarCantidad(producto)")
                                                    i.fa.fa-plus-circle.green
                                                //a(href="#", style="margin-left: 10px", ng-click="reducirCantidad(producto)")
                                                    i.fa.fa-minus-circle.red
                                        td
                                            input(ng-model="producto.total", ng-init="producto.total = producto.quantity * producto.price", disabled, ng-bind-template="{{producto.total}} €").form-control

                                tbody
                                    tr
                                        td
                                        td
                                        td
                                        td
                                        td
                                        td Total: {{precioTotal()}} €


                        div.col-sm-2.col-sm-offset-4
                            a.btn.btn-default(href="#", role="button", ng-click="") Cancelar
                        div.col-sm-2
                            a.btn.btn-default.btn-primary(href="#", role="button", ng-click="")#confirmarEliminacion Aceptar



block scripts
    script(src="/js/jquery.js")
    script(src="/js/bootstrap.js")
    script(src="/js/angular.js")
    script(src='/js/angular/admin/app.js')
    script(src="/js/angular/admin/pedido.js")
    script(src="/js/angular/admin/navbar.js")
    script(src="/js/angular/admin/sidebar.js")