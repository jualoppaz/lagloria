extends ../adminPartials/layout

block content
    div(ng-app="emails")
        div
            include ../adminPartials/navbar

        div.container-fluid
            div.row

                include ../adminPartials/sidebar

                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main

                    h1.page-header Correos electr√≥nicos

                    div.col-md-12.col-sm-12(ng-controller="mainController")
                        table.table
                            thead
                                tr
                                    th Remitente
                                    th Fecha
                                    th Mensaje
                            tbody(ng-repeat="email in emails")
                                tr(ng-click="verEmail(email)", ng-show="email.leido == false").verEmail
                                    td(style="font-weight: bold") {{email.nombre}} ({{email.direccion}})
                                    td(style="font-weight: bold") {{email.fecha | date:'dd/MM/yyyy'}}
                                    td(style="font-weight: bold") {{email.mensaje}}
                                tr(href="/emails/{{email._id}}", ng-show="email.leido == true")
                                    td {{email.nombre}} ({{email.direccion}})
                                    td {{email.fecha | date:'dd/MM/yyyy'}}
                                    td {{email.mensaje}}


block scripts
    script(src="/js/jquery.js")
    script(src="/js/bootstrap.js")
    script(src="/js/angular.js")
    script(src="/js/angular/admin/emails.js")
    script(src="/js/angular/admin/navbar.js")
    script(src="/js/angular/admin/sidebar.js")