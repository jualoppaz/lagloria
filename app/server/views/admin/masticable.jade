extends ../adminPartials/layout

block content
    div(ng-app="dashboard")
        div
            include ../adminPartials/navbar
                div.container-fluid
            div.row
                include ../adminPartials/sidebar
                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(ng-controller="MasticableController")
                    h1.page-header Masticable
                    form.form-horizontal
                        div.form-group
                            label.col-sm-2.control-label Modelo:
                            div.col-sm-4
                                input(ng-model="nuevoProducto.model").form-control
                        div.form-group
                            label.col-sm-2.control-label Pedído mínimo:
                            div.col-sm-4
                                input(ng-model="nuevoProducto.minimumOrder").form-control
                        div.form-group
                            label.col-sm-2.control-label Precio por Kg:
                            div.col-sm-4
                                input(ng-model="nuevoProducto.price").form-control


                    div.col-sm-2
                        a.btn.btn-default(href="#", role="button", ng-click="") Cancelar
                    div.col-sm-2
                        a.btn.btn-default.btn-primary(href="#", role="button", ng-click="")#confirmarEliminacion Aceptar

block scripts
    script(src="/js/jquery.js")
    script(src="/js/bootstrap.js")
    script(src="/js/angular.js")
    script(src='/js/angular/admin/app.js')
    script(src="/js/angular/admin/masticable.js")
    script(src="/js/angular/admin/navbar.js")
    script(src="/js/angular/admin/sidebar.js")