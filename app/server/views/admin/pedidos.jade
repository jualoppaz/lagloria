extends ../adminPartials/layout

block content
    div(ng-app="dashboard")
        div
            include ../adminPartials/navbar
        div.container-fluid
            div.row
                include ../adminPartials/sidebar
                div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    h1.page-header Pedidos
                    div.col-md-12.col-sm-12(ng-controller="PedidosController")
                        table.table
                            thead
                                tr
                                    th Eliminar
                                    th Cliente
                                    th Fecha
                            tbody(ng-repeat="pedido in pedidos")
                                tr(ng-show="pedido.leido == false").verEmail
                                    td(style="font-weight: bold")
                                        span(ng-click="eliminarPedido(pedido._id)")
                                            i.fa.fa-trash-o
                                    td(style="font-weight: bold", ng-click="verEmail(email._id)") {{pedido.user}}
                                    td(style="font-weight: bold", ng-click="verEmail(email._id)") {{pedido.fecha | date:'dd/MM/yyyy'}}
                                    td(style="font-weight: bold; text-overflow: hidden !important", ng-click="verEmail(email._id)").mensajeEmail {{email.mensaje}}
                                tr(ng-show="pedido.leido == true").verEmail
                                    td
                                        span(ng-click="eliminarPedido(pedido._id)")
                                            i.fa.fa-trash-o
                                    td(ng-click="verPedido(pedido._id)") {{pedido.user}}
                                    td(ng-click="verPedido(pedido._id)") {{pedido.fecha | date:'dd/MM/yyyy'}}

                        include ../modals/eliminarPedido




block scripts
    script(src="/js/jquery.js")
    script(src="/js/bootstrap.js")
    script(src="/js/angular.js")
    script(src='/js/angular/admin/app.js')
    script(src="/js/angular/admin/pedidos.js")
    script(src="/js/angular/admin/navbar.js")
    script(src="/js/angular/admin/sidebar.js")